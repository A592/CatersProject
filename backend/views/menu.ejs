<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu for <%= restaurant.name %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <style>
        .package-image {
            width: 100%;
            height: auto;
            max-height: 200px;
            object-fit: cover;
            border-radius: 5px;
        }
        .card {
            margin-bottom: 30px;
        }
        .error-message {
            color: red;
            display: none;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Menu for <%= restaurant.name %></h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <p><strong>Cuisine:</strong> <%= restaurant.cuisine %></p>
                <p><strong>Address:</strong> <%= restaurant.address %></p>
                <p><strong>Contact:</strong> <%= restaurant.contact %></p>
            </div>
        </div>

        <div class="row justify-content-center">
            <!-- Loop through the packages and display them -->
            <% if (packages.length === 0) { %>
                <div class="alert alert-warning text-center">No packages available for this restaurant.</div>
            <% } else { %>
                <% packages.forEach(package => { %>
                    <div class="col-md-4">
                        <div class="card h-100">
                            <img src="<%= package.image %>" alt="<%= package.name %> image" class="package-image card-img-top">
                            <div class="card-body">
                                <h5 class="card-title"><%= package.name %></h5>
                                <p class="card-text"><%= package.description %></p>
                                <p><strong>Price:</strong> $<%= package.price %></p>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" id="<%= package.name %>" name="package" value="<%= package.name %>" data-price="<%= package.price %>">
                                    <label class="form-check-label" for="<%= package.name %>">Select <%= package.name %></label>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <!-- Billing Section -->
        <div class="row mt-5 justify-content-center">
            <div class="col-md-6">
                <h4>Booking Details</h4>
                <div class="mb-3">
                    <label for="numPeople" class="form-label">Number of People:</label>
                    <input type="number" id="numPeople" class="form-control" value="5" min="5" required>
                    <p id="peopleError" class="error-message">Please enter a valid number of people.</p>
                </div>

                <div class="mb-3">
                    <label for="dateTime" class="form-label">Date and Time:</label>
                    <input type="text" id="dateTime" class="form-control" required>
                    <p id="dateTimeError" class="error-message">Please select a valid date and time.</p>
                </div>

                <div class="mb-3">
                    <p class="total-price"><strong>Total Price:</strong> <span id="totalPrice">$0</span></p>
                </div>

                <input type="hidden" id="restaurantId" value="<%= restaurant._id %>">
                <button id="bookButton" class="btn btn-primary btn-block" disabled>Confirm Booking</button>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="/js/menu.js"></script>
</body>
</html>
